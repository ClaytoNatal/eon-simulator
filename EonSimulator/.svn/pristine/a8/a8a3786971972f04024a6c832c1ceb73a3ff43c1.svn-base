package br.ufpe.eonsimulator.costFunctions;

import java.util.List;

import br.ufpe.simulatorkernel.domain.Link;

public class MaxLinkCostFunction implements IsLinkCostFunction {

	private double getMax(List<Link> links) {
		double maxOccupation = 0;
		for (Link link : links) {
			if (link.getnAllocatedSlots() > maxOccupation) {
				maxOccupation = link.getnAllocatedSlots();
			}
		}
		return maxOccupation;
	}

	@Override
	public void updateLinkCost(double alfa, double occupationFactor,
			List<Link> links) {
		for (Link link : links) {
			link.setCost((double) (alfa * link.getCost() + (1 - alfa)
					* (link.getnAllocatedSlots() / occupationFactor)));
		}

	}

	@Override
	public double getOccupation(List<Link> links) {
		return getMax(links);
	}
}
