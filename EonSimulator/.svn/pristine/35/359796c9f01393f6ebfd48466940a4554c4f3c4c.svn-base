# EON Simulation Configuration File

#Simulator Type
#0 SimpleSimulationController, 1 OSNRValidationSimulationController, 2 EqualsNumberRoutesSimulationController
simulation.simulator=0

#Simulation Results Mode
#0 BitRate,1 Erlang
simulation.results.mode=1

#Simulation Parameters
simulation.numberOfIterations=10000000
#Max Simulation Type, -1 (no timeout)
simulation.maxSimulationTime=-1

#Cost Function for Routing Algorithm
#0 HopCostFunction, 1 LengthCostFunction
